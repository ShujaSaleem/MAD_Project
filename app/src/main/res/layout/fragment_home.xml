<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bus6"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/homeb"
        android:layout_weight="0.9"
        android:weightSum="1">

        <Button
            android:id="@+id/Logout_User"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginRight="100dp"
            android:background="@drawable/ic_baseline_logout_24"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="5dp"
            android:spinnerMode="dropdown"
            android:scaleX="0.5"
            android:scaleY="0.8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_marginLeft="100dp"
            android:layout_marginVertical="5dp"
            android:layout_marginRight="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                app:cardCornerRadius="35dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/mm"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.1"
        android:weightSum="1">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_weight="0.7">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#00F9F8FA"
            android:layout_margin="0dp">

            <ImageView
                android:id="@+id/home_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bus16"/>

        </androidx.cardview.widget.CardView>

       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.9"
                android:weightSum="1">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.1"
                android:background="@drawable/bb"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.2"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0.5"
                        android:weightSum="1">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/homeb"
                            android:layout_margin="5dp"
                            android:layout_weight="0.5"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="From"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:drawableLeft="@drawable/ic_baseline_add_location_alt_24"
                                android:textStyle="bold"
                                android:layout_weight="0.8"/>

                            <Spinner
                                android:id="@+id/From_Spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/home"
                                android:layout_weight="0.2"
                                android:spinnerMode="dropdown"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/homeb"
                            android:layout_margin="5dp"
                            android:layout_weight="0.5"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="To"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                                android:textColor="@color/white"
                                android:layout_weight="0.8"/>

                            <Spinner
                                android:id="@+id/To_Spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/home"
                                android:layout_weight="0.2"
                                android:spinnerMode="dropdown"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:weightSum="1">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1"
                            android:background="@drawable/homeb"
                            android:layout_margin="5dp"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Date"
                                android:gravity="center"
                                android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_weight="0.8"/>

                            <Spinner
                                android:id="@+id/Date_Spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/home"
                                android:layout_weight="0.2"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="@drawable/homeb"
                            android:weightSum="1"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Time"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:drawableLeft="@drawable/ic_baseline_access_time_24"
                                android:layout_weight="0.8"/>

                            <Spinner
                                android:id="@+id/Time_Spinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/home"
                                android:layout_weight="0.2"
                                android:spinnerMode="dropdown"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/Bus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="0.8"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/create_button"
                    android:padding="5dp"
                    android:text="Search a Bus"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>