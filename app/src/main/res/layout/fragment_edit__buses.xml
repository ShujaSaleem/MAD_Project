<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/bus6"
    tools:context=".Edit_Buses">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/homeb"
        android:weightSum="1">

        <ImageView
            android:id="@+id/edit_bus_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/bus19"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bb"
            android:weightSum="1"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                android:layout_weight="0.5"
                android:weightSum="1">

                <EditText
                    android:id="@+id/edit_bus_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/homeb"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColorHint="@color/white"
                    android:layout_margin="5dp"
                    android:hint="Bus Number"
                    android:layout_weight="0.5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:weightSum="1"
                    android:layout_weight="0.5">

                    <CheckBox
                        android:id="@+id/edit_check_ac"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:text="AC"
                        android:textColor="@color/white"
                        android:background="@drawable/home"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginHorizontal="10dp"/>

                    <CheckBox
                        android:id="@+id/edit_check_nonac"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:text="Non AC"
                        android:textColor="@color/white"
                        android:background="@drawable/home"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginHorizontal="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:weightSum="1"
                    android:layout_weight="0.3">

                    <Button
                        android:id="@+id/submit_update"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                       android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:background="@drawable/create_button"
                        android:text="Update"
                        android:layout_weight="0.5"/>

                    <Button
                        android:id="@+id/submit_delete"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:background="@drawable/create_button"
                        android:text="Delete"
                        android:layout_weight="0.5"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_weight="0.7">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>