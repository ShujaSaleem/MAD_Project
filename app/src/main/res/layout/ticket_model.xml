<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="@drawable/bus6"
    android:layout_height="250dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#08F9F8FA"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bb"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_weight="0.2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@drawable/homeb"
                    android:layout_weight="0.6"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/bus_model_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:src="@drawable/bus19" />


                    <TextView
                        android:id="@+id/bus_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Bus Type"
                        android:textSize="20sp"
                        android:background="@drawable/homeb"
                        android:textColorHint="#787575"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_weight="0.7"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:weightSum="1"
                    android:layout_weight="0.4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Date/Time"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_weight="0.2"/>

                    <TextView
                        android:id="@+id/date_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="12-1-2022/12:00"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_weight="0.2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="From-To"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_weight="0.2"/>

                    <TextView
                        android:id="@+id/from_to"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Lahore-Khanpur"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_weight="0.2"/>

                    <TextView
                        android:id="@+id/fee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Rs: 1850"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_weight="0.2"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>