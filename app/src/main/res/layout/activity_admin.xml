<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bus6"
    android:padding="10dp"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Admin Panel"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/homeb"
        android:gravity="center"
        android:layout_weight="0.9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/homeb"
        android:layout_weight="0.1"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:id="@+id/A_FRAME"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/homeb"
            android:layout_weight="0.8"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:weightSum="1">

                <Button
                    android:id="@+id/view_buses"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="View Buses"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/fhome"
                    android:textStyle="bold"
                    android:layout_weight="0.5"/>

                <Button
                    android:id="@+id/add_buses"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add Buses"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:background="@drawable/fhome"
                    android:gravity="center"
                    android:textStyle="bold"

                    android:layout_weight="0.5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:weightSum="1">

                <Button
                    android:id="@+id/view_tickets"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="View Tickets"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:background="@drawable/fhome"
                    android:gravity="center"
                    android:textStyle="bold"

                    android:layout_weight="0.5"/>

                <Button
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Logout"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:background="@drawable/fhome"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="0.5"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>